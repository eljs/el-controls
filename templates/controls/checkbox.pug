#{ 'yield' }(from='input')
  input(
    id='{ getId() }'
    name='{ getName() }'
    type='checkbox'
    onchange='{ change }'
    onblur='{ change }'
    checked='{ input.ref.get(input.name) }'
    class='{invalid: errorMessage, valid: valid, labeled: label}'
  )
#{ 'yield' }
#{ 'yield' }(from='label')
  .label.active(if='{ label }')
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
