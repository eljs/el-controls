#{ 'yield' }(from='input')
  select(
    id='{ input.name.replace(/\\./g, "-") }'
    style='display: none'
    name='{ name || input.name.replace(/\\./g, "-") }'
    onchange='{ change }'
    onblur='{ change }'
    placeholder='{ placeholder }'
    class='{invalid: errorMessage, valid: valid, labeled: label}'
  )
#{ 'yield' }(from='label')
  .label.active(if='{ label }')
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
#{ 'yield' }

