#{ 'yield' }(from='input')
  select(
    id='{ input.name.replace(/\./g, "-") }'
    style='display: none'
    name='{ name || input.name.replace(/\./g, "-") }'
    onchange='{ change }'
    onblur='{ change }'
    placeholder='{ instructions || placeholder }'
    class='{invalid: errorMessage, valid: valid}'
  )
#{ 'yield' }(from='placeholder')
  .placeholder.small
    | { placeholder }
#{ 'yield' }
  #{ 'yield' }(from='error')
    .error(if='{ errorMessage }')
      | { errorMessage }
