#{ 'yield' }(from='input')
  input(
    id='{ input.name }',
    name='{ name || input.name }',
    type='{ type }',
    onchange='{ change }',
    onblur='{ change }',
    riot-value='{ input.ref.get(input.name) }',
    class='{invalid: errorMessage, valid: valid}'
    autocomplete='{ autocomplete }',
    autofocus='{ autofocus }',
    disabled='{ disabled }',
    maxlength='{ maxlength }',
    placeholder='{ placeholder }',
    readonly='{ readonly }'
  )
#{ 'yield' }
  #{ 'yield' }(from='error')
    .error(if='{ errorMessage }')
      | { errorMessage }
