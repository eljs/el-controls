#{ 'yield' }(from='input')
  input(
    id='{ getId() }'
    name='{ getName() }'
    type='{ type }'
    onclick='{ copy }'
    riot-value='{ getText() }'
    class='{invalid: errorMessage, valid: valid, labeled: label}'
    autocomplete='{ autocomplete }'
    autofocus='{ autofocus }'
    disabled='{ disabled }'
    maxlength='{ maxlength }'
    readonly='true'
    placeholder='{ placeholder }'
  )
#{ 'yield' }(from='label')
  .label(
    class='{ active: true }'
    if='{ label }'
  )
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
#{ 'yield' }(from='copy-text')
  .copy-text
    | { copied ? 'Copied' : '&#128203;' }
#{ 'yield' }
