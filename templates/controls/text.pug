#{ 'yield' }(from='input')
  input(
    id='{ input.name.replace(/\\./g, "-") }'
    name='{ name || input.name.replace(/\\./g, "-") }'
    type='{ type }'
    onchange='{ change }'
    onblur='{ change }'
    riot-value='{ input.ref.get(input.name) }'
    class='{invalid: errorMessage, valid: valid}'
    autocomplete='{ autocomplete }'
    autofocus='{ autofocus }'
    disabled='{ disabled }'
    maxlength='{ maxlength }'
    readonly='{ readonly }'
  )
#{ 'yield' }(from='placeholder')
  .placeholder(class='{ small: input.ref.get(input.name) }')
    | { placeholder }
#{ 'yield' }
  #{ 'yield' }(from='error')
    .error(if='{ errorMessage }')
      | { errorMessage }

