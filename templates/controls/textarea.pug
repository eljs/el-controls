#{ 'yield' }(from='input')
  textarea(
    id='{ getId() }'
    name='{ getName() }'
    onchange='{ change }'
    onblur='{ change }'
    class='{invalid: errorMessage, valid: valid, labeled: label}'
    rows='{ rows }'
    cols='{ cols }'
    disabled='{ disabled }'
    maxlength='{ maxlength }'
    placeholder='{ placeholder }'
    readonly='{ readonly }'
    wrap='{ wrap }'
  )
    | { input.ref.get(input.name) }
#{ 'yield' }(from='label')
  .label.active(if='{ label }')
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
#{ 'yield' }

