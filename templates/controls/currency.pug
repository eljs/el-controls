#{ 'yield' }(from='input')
  input.right-aligned(
    id='{ getId() }'
    name='{ getName() }'
    type='{ type }'
    onchange='{ change }'
    onblur='{ change }'
    riot-value='{ renderValue() }'
    class='{invalid: errorMessage, valid: valid, labeled: label}'
    autocomplete='{ autocomplete }'
    autofocus='{ autofocus }'
    disabled='{ disabled }'
    maxlength='{ maxlength }'
    readonly='{ readonly }'
    placeholder='{ placeholder }'
  )
#{ 'yield' }(from='label')
  .label(
    class='{ active: input.ref.get(input.name) || input.ref.get(input.name) == 0 || placeholder }'
    if='{ label }'
  )
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
#{ 'yield' }
