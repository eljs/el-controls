#{ 'yield' }(from='input')
  select(
    id='{ input.name }',
    name='{ name || input.name }',
    onchange='{ change }',
    onblur='{ change }',
    class='{invalid: errorMessage, valid: valid}',
    autofocus='{ autofocus }',
    disabled='{ disabled }',
    multiple='{ multiple }',
    size='{ size }',
    if='{ hasOptions() }'
  )
    option(
      if='{ instructions || placeholder }',
      value='',
    )
      | { instructions || placeholder }
    option(
      each='{ v, k in options() }',
      value='{ k }',
      selected='{ k == input.ref.get(input.name) }'
    )
      | { v }
