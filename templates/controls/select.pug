#{ 'yield' }(from='input')
  select(
    id='{ input.name }',
    name='{ name || input.name }',
    onchange='{ change }',
    onblur='{ change }',
    placeholder='{ instructions || placeholder }',
    class='{invalid: errorMessage, valid: valid}',
    autofocus='{ autofocus }',
    disabled='{ disabled }',
    multiple='{ multiple }',
    size='{ size }'
  )
    option(each='{ v, k in options() }', value='{ k }', selected='{ k == data.get("input.name") }') v
#{ 'yield' }(from='placeholder')
  .placeholder.small
    | { placeholder }
#{ 'yield' }
  #{ 'yield' }(from='error')
    .error(if='{ errorMessage }')
      | { errorMessage }
